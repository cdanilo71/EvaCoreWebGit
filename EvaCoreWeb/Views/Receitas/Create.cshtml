@model EvaCoreWeb.Models.ViewModels.ReceitaFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Cadastro</h2>

<h5></h5>
<hr />
<div class="row">
    <!-- garante que o div ocupe a largura da tela -->
    <div class="col-md-4">
        <!-- indica que deve ser usada 1/3 da tela por conta do md-4 -->
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Receita.isn_codigo" class="control-label"></label>
                <select asp-for="Receita.isn_codigo" asp-items="@(new SelectList(Model.Codigos,"isn_codigo","dsc_codigo"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Receita.dsc_receita" class="control-label"></label>
                <input asp-for="Receita.dsc_receita" class="form-control text-uppercase" />
            </div>
            <div class="form-group">
                <button asp-action="Create" value="Create" type="submit" class="btn btn-primary button-acessar"><span class="text-button">Gravar</span></button>
                <button asp-action="Index" value="Index" type="submit" class="btn btn-primary button-acessar"><span class="text-button">Desistir</span></button>
            </div>
        </form>
    </div>
</div>
