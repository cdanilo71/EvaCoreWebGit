@model EvaCoreWeb.Models.ViewModels.CodigoFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Cadastro</h2>

<h5></h5>
<hr />
<div class="row">
    <!-- garante que o div ocupe a largura da tela -->
    <div class="col-md-4">
        <!-- indica que deve ser usada 1/3 da tela por conta do md-4 -->
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Codigo.dsc_codigo" class="control-label"></label>
                <input asp-for="Codigo.dsc_codigo" class="form-control text-uppercase" />
            </div>
            <div class="form-group">
                <label asp-for="Codigo.dsc_codigo_de_barra" class="control-label"></label>
                <input asp-for="Codigo.dsc_codigo_de_barra" class="form-control text-uppercase" />
            </div>
            <div class="form-group">
                <label asp-for="Codigo.isn_grupo" class="control-label"></label>
                <select asp-for="Codigo.isn_grupo" asp-items="@(new SelectList(Model.Grupos,"isn_grupo","dsc_grupo"))" class="form-control"></select>
            </div> 
            <div class="form-group">
                <label asp-for="Codigo.isn_subgrupo" class="control-label"></label>
                <select asp-for="Codigo.isn_subgrupo" asp-items="@(new SelectList(Model.SubGrupos,"isn_subgrupo","dsc_subgrupo"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Codigo.isn_unidade_medida_estoque" class="control-label"></label>
                <select asp-for="Codigo.isn_unidade_medida_estoque" asp-items="@(new SelectList(Model.UnidadeMedidaEstoques,"isn_unidade_medida_estoque","dsc_unidade_medida_estoque"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Codigo.qtd_codigo" class="control-label"></label>
                <input asp-for="Codigo.qtd_codigo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Codigo.val_ultimo_custo_medio" class="control-label"></label>
                <input asp-for="Codigo.val_ultimo_custo_medio" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Codigo.val_ultima_compra" class="control-label"></label>
                <input asp-for="Codigo.val_ultima_compra" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Codigo.val_preco_venda" class="control-label"></label>
                <input asp-for="Codigo.val_preco_venda" class="form-control" />
            </div>
            <div class="form-group">
                @*<h2>
                        <input type="submit" value="Create" class="btn-block icon-bar" />
                    </h2>
                    <a asp-action="Index">Voltar</a>*@
                <button asp-action="Create" value="Create" type="submit" class="btn btn-primary button-acessar"><span class="text-button">Gravar</span></button>
                <button asp-action="Index" value="Index" type="submit" class="btn btn-primary button-acessar"><span class="text-button">Desistir</span></button>
            </div>
        </form>
    </div>

</div>
